<section class="final-cta section" id="download">
  <!-- Background -->
  <div class="cta-bg">
    <div class="cta-orb cta-orb-1"></div>
    <div class="cta-orb cta-orb-2"></div>
    <div class="cta-grid"></div>
  </div>

  <div class="container">
    <div class="cta-content reveal">
      <h2 class="cta-title">
        Ready to get <span class="text-gradient">serious</span>?
      </h2>
      
      <p class="cta-description">
        Join thousands who have taken control of their productivity. 
        Download Shuuchuu and start your focus journey today.
      </p>

      <div class="cta-buttons">
        <a href="#" class="btn btn-primary btn-lg cta-main-btn">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="3" width="20" height="14" rx="2"/>
            <path d="M8 21h8"/>
            <path d="M12 17v4"/>
          </svg>
          Download for Windows
          <span class="btn-badge">Free</span>
        </a>
      </div>

      <p class="cta-note">
        Windows 10/11 • No account required • Always free
      </p>

      <!-- Animated arrow -->
      <div class="cta-arrow animate-scroll-bounce">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M19 12l-7 7-7-7"/>
        </svg>
      </div>
    </div>
  </div>
</section>

<style>
  .final-cta {
    position: relative;
    padding: var(--space-4xl) 0 var(--space-3xl);
    overflow: hidden;
  }

  /* Background */
  .cta-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .cta-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
  }

  .cta-orb-1 {
    width: 600px;
    height: 600px;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    opacity: 0.15;
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
  }

  .cta-orb-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #8b5cf6, var(--primary-color));
    opacity: 0.1;
    bottom: -100px;
    right: 10%;
  }

  .cta-grid {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at center, rgba(73, 136, 196, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.5;
  }

  /* Content */
  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: var(--space-lg);
  }

  .cta-description {
    font-size: 1.125rem;
    color: var(--text-muted);
    line-height: 1.8;
    margin-bottom: var(--space-2xl);
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    margin-bottom: var(--space-lg);
  }

  .cta-main-btn {
    position: relative;
    padding: var(--space-lg) var(--space-2xl);
    font-size: 1.125rem;
    gap: var(--space-md);
  }

  .cta-main-btn:hover {
    transform: translateY(-4px) scale(1.02);
  }

  .btn-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    padding: var(--space-xs) var(--space-sm);
    background: var(--success-green);
    color: white;
    font-size: 0.7rem;
    font-weight: 700;
    border-radius: var(--radius-sm);
    text-transform: uppercase;
  }

  .cta-note {
    font-size: 0.9rem;
    color: var(--text-muted);
    opacity: 0.7;
    margin-bottom: var(--space-2xl);
  }

  .cta-arrow {
    color: var(--primary-color);
    opacity: 0.5;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cta-main-btn {
      padding: var(--space-md) var(--space-xl);
      font-size: 1rem;
    }
  }
</style>
